<Page
    x:Class="BidonDispenser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BidonDispenser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <StackPanel
         Orientation="Vertical"
         Background="#FEFEFE" >
        
        <!-- A relative panel for the promotion images -->
        <RelativePanel>
            <Image
                x:Name="promotionImagePreload"
                Source="{x:Bind mainModel.promotionImagePreload, Mode=OneWay}"
                VerticalAlignment="Top" />

            <Image
                x:Name="promotionImage"
                Source="{x:Bind mainModel.promotionImage, Mode=OneWay}"
                VerticalAlignment="Top" />
        </RelativePanel>
        
        <!-- A progress bar to indicate when the next promotion image is going to show -->
        <ProgressBar 
            x:Name="progressBar" 
            Value="{x:Bind mainModel.progressBarValue, Mode=OneWay}"
            Maximum="30000" 
            Background="#EEEEEE" 
            Foreground="#DFDFDF"/>

        <!-- "Command Test" Panel -->
        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE"
            Margin="10"
            Spacing="14">

            <Button Name="Sense"                HorizontalAlignment="Center"    Content="Sense"                 Click="serialTest"/>
            <Button Name="Lock"                 HorizontalAlignment="Center"    Content="Lock"                  Click="serialTest"/>
            <Button Name="Unlock"               HorizontalAlignment="Center"    Content="Unlock"                Click="serialTest"/>
            <Button Name="TemperatureCheck"     HorizontalAlignment="Center"    Content="Temperature Check"     Click="serialTest"/>
            <Button Name="Dispense"             HorizontalAlignment="Center"    Content="Dispense"              Click="serialTest"/>

            <Image
                Source="ms-appx:///Assets/Images/Selections/AcceptCancelSelectionWhite.png"
                Margin="0, 120, 0, 0"/>

        </StackPanel>
        
        <!-- "Pick A Colour" Panel -->
        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE">

            <TextBlock
                Text="Welcome to the Join the Pipe Bidondispenser!"
                Foreground="#53C5CF"
                FontSize="44"
                FontFamily="Segoe UI"
                FontWeight="Bold"
                Padding="0, 100, 0, 0"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Pick a bottle colour to continue."
                Foreground="#AAAAAA"
                FontSize="28"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                Padding="0, 48, 0, 0"
                HorizontalAlignment="Center"/>

            <Image
                Source="ms-appx:///Assets/Images/Selections/BottleColourSelection.png"
                Margin="0, 120, 0, 0"/>

        </StackPanel>
        
        <!-- "Finishing Up" Panel -->
        <StackPanel
            Visibility="Visible"
            Orientation="Vertical"
            Background="#FEFEFE" >

            <StackPanel
                Orientation="Horizontal"
                Background="#FEFEFE" 
                Margin="30, 30, 30, 30">

                <Image
                    Source="ms-appx:///Assets/Images/BottleColours/BlueBottle.png"
                    Height="250"/>

                <TextBlock
                    Text="Text text text."
                    Foreground="#AAAAAA"
                    FontSize="28"
                    FontFamily="Segoe UI"
                    FontWeight="SemiBold"
                    Padding="60, 50, 0, 0"
                    HorizontalAlignment="Center"/>

            </StackPanel>

            <Image
                Source="ms-appx:///Assets/Images/Selections/CancelSelection.png" />

        </StackPanel>
        
        <!-- "Thank You" Panel -->
        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE"
            Margin="0, 10, 0, 0">

            <Image 
                Source="ms-appx:///Assets/Images/Thx.png"/>

        </StackPanel>

        <!-- "Thank You Fam" Panel -->
        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE"
            Margin="0, 10, 0, 0">

            <Image 
                Source="ms-appx:///Assets/Images/ThxFam.png"/>

        </StackPanel>


    </StackPanel>
</Page>
