<Page
    x:Class="BidonDispenser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BidonDispenser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <StackPanel
         Orientation="Vertical"
         Background="#FEFEFE" >
        
        <!-- A relative panel for the promotion material -->
        <RelativePanel>
            <Image
                x:Name="promotionImagePreload"
                Source="{x:Bind mainModel.promotionImagePreload, Mode=OneWay}"
                VerticalAlignment="Top" />

            <Image
                x:Name="promotionImage"
                Source="{x:Bind mainModel.promotionImage, Mode=OneWay}"
                VerticalAlignment="Top" />
        </RelativePanel>
        
        <ProgressBar 
            x:Name="progressBar" 
            Value="15000" 
            Maximum="30000" 
            Background="#EEEEEE" 
            Foreground="#DFDFDF"/>
        
        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE"
            Margin="10">

            <TextBlock Text="Hello World!" />
            <Button Content="Connect!" Click="connectHandler"/>
            <Button Content="Write Read!" Click="writeReadHandler"/>
            <Button Content="Disconnect!" Click="disconnectHandler"/>
            
        </StackPanel>

        <StackPanel
            Visibility="Visible"
            Orientation="Vertical"
            Background="#FEFEFE">

            <TextBlock
                Text="Welcome to the Join the Pipe Bidondispenser!"
                Foreground="#53C5CF"
                FontSize="44"
                FontFamily="Segoe UI"
                FontWeight="Bold"
                Padding="0, 100, 0, 0"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Pick a bottle colour to continue."
                Foreground="#AAAAAA"
                FontSize="28"
                FontFamily="Segoe UI"
                FontWeight="SemiBold"
                Padding="0, 48, 0, 0"
                HorizontalAlignment="Center"/>

            <Image
                x:Name="bottleColours"
                Source="ms-appx:///Assets/Images/ThankYouM8_LitEdition.png"
                Margin="0, 120, 0, 0"/>

        </StackPanel>

        <StackPanel
            Visibility="Collapsed"
            Orientation="Vertical"
            Background="#FEFEFE"
            Margin="10">
            
            
            
        </StackPanel>


    </StackPanel>
</Page>
